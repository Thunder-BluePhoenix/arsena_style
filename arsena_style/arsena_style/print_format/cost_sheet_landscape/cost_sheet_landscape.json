 "doctype": "Print Format",
 "font_size": 14,
 "html": "<!DOCTYPE html>\n<html>\n<head>\n    <style>\n        @page {\n            size: landscape;\n            margin: 0.5cm;\n        }\n        \n        body {\n            margin: 0;\n            padding: 0;\n            font-family: Arial, sans-serif;\n        }\n        .sheet-container {\n            padding: 10px;\n            max-width: 100%;        \n            max-height: calc(100vh - 80px);\n        }\n        .header {\n            display: flex;\n            justify-content: space-between;\n            align-items: center;\n            margin-bottom: 15px;\n        }\n        .left-header {\n            font-size: 24px;\n            font-weight: bold;\n        }\n        .center-header {\n            text-align: center;\n            font-size: 20px;\n            font-weight: bold;\n        }\n        .right-header {\n            text-align: right;\n        }\n        .date-section {\n            text-align: left;\n            margin-bottom: 10px;\n            font-size: 12px;\n        }\n        .doc-number {\n            text-align: right;\n            margin-bottom: 10px;\n            font-size: 12px;\n        }\n        .category-row {\n            display: grid;\n            grid-template-columns: 1fr 1fr 1fr;\n            border: 1px solid #000;\n            margin-bottom: 15px;\n        }\n        .category-cell {\n            padding: 8px;\n            font-weight: bold;\n            border-right: 1px solid #000;\n        }\n        .category-cell:last-child {\n            border-right: none;\n        }\n        .wrapper{\n            display:flex;\n            width:100%;\n        }\n        .left{\n            width:50%;\n            border:1px solid black;\n        }\n        .right{\n            width:50%;\n            font-size:14px;\n        }\n        \n        /* Image row at the top */\n        .image-row {\n            display: flex;\n            justify-content: space-around;\n            gap: 20px;\n            margin-bottom: 20px;\n            height:100%;\n        }\n        .image-container {\n            width: 45%;\n            text-align: center;\n        }\n        .view-title {\n            font-weight: bold;\n            text-align: center;\n            border-bottom: 1px solid #000;\n            padding: 5px 0;\n            margin-bottom: 10px;\n        }\n        .image-wrapper{\n            height:calc(100% - 80px);\n        }\n        .product-image {\n            /*max-width: 100%;*/\n            height: 100%;\n            max-height: 450px;\n            object-fit: fill;\n        }\n        /* Two tables below */\n        .tables-container {\n            /*display: flex;*/\n            /*gap: 20px;*/\n        }\n        .left-table-container, .right-table-container {\n            width: 100%;\n        }\n        .details-table {\n            width: 100%;\n            border-collapse: collapse;\n            /*margin-bottom: 15px;*/\n            font-size:12px;\n        }\n        .details-table th, .details-table td {\n            border: 1px solid #000000;\n            color:#000000;\n            padding: 5px;\n        }\n        .details-table th {\n            /*background-color: #f8f8f8;*/\n            font-weight: bold;\n            text-align: left;\n            width: 38%;\n        }\n        \n        .raw-mat-details-head th{\n            color:#000000;\n            font-weight:bold;\n        }\n        .cost-table {\n            width: 100%;\n            border-collapse: collapse;\n        }\n        .cost-table th, .cost-table td {\n            border: 1px solid #000000;\n            /*padding: 8px;*/\n            font-size:13px;\n            color:#000;\n        }\n        .cost-label {\n            font-weight: bold;\n            /*width: 60%;*/\n        }\n        .cost-amount {\n            text-align: right;\n        }\n        .last-row{\n            display: flex;\n            width: 100%;\n            margin-top: 12px;\n        }\n        .qty-row {\n            padding: 8px;\n            display: flex;\n            width: 40%;\n            align-items:center;\n            justify-content: space-between;\n            border:1px solid #000000;\n        }\n        .qty-label, .total-label {\n            font-weight: bold;\n        }\n        .total-row{\n            width: 60%;\n            display: flex;\n            justify-content: space-between;\n            border: 1px solid #000;\n            align-items: center;\n            padding:6px;\n        }\n        .total-cost {\n            text-align: right;\n            font-weight: bold;\n            \n        }\n    </style>\n</head>\n<body>\n    <div class=\"sheet-container\">\n        <!-- Date and Doc Number -->\n        <div style=\"display: flex; justify-content: space-between; margin-bottom: 5px;\">\n            <div class=\"date-section\">{{ frappe.utils.formatdate(frappe.utils.today()) }}</div>\n            <div class=\"doc-number\">{{ doc.name }}</div>\n        </div>\n\n        <!-- Header -->\n        <div class=\"header\">\n            <div class=\"left-header\">ARSENAS</div>\n            <div class=\"center-header\">PRODUCT SPECIFICATION SHEET</div>\n            <div class=\"right-header\">SHEET-1</div>\n        </div>\n        \n        <!-- Category and Style Info -->\n        <div class=\"category-row\">\n            <div class=\"category-cell\">PRODUCT NAME: {{ doc.product_name }}</div>\n            <div class=\"category-cell\">STYLE NO: {{ doc.style_no }}</div>\n            <div class=\"category-cell\">YEAR: {{ frappe.utils.get_datetime(doc.creation).year }}</div>\n        </div>\n        \n        <div class=\"wrapper\">\n            <div class=left>\n                <div class=\"image-row\">\n                <!-- Two tables below images -->\n                    {% for view in doc.views %}\n                    <div class=\"image-container\">\n                        <div class=\"view-title\">{{ view.view_angle|upper }} VIEW</div>\n                        <div class=\"image-wrapper\">\n                            <img src=\"{{ view.image }}\" class=\"product-image\" alt=\"{{ view.view_angle }}\">\n                        </div>\n                    </div>\n                    {% endfor %}\n                </div>\n            </div>\n            <div class=\"right\">\n                <div class=\"tables-container\">\n                    <!-- Left table - Details -->\n                    <div class=\"left-table-container\">\n                        <table class=\"details-table\">\n                            \n                            <tr>\n                                <th>DESCRIPTION</th>\n                                <td>{{ doc.description }}</td>\n                            </tr>\n                            <tr>\n                                <th>SIZE + COLOR</th>\n                                <td>{{ doc.size }} + {{ doc.color }}</td>\n                            </tr>\n                            <tr>\n                                <th>COLLECTION DESC.</th>\n                                <td>{{ doc.collection_name }}</td>\n                            </tr>\n                            <tr>\n                                <th>SEASON</th>\n                                <td>{{ doc.season }}</td>\n                            </tr>\n                            <tr>\n                                <th>Consumption</th>\n                                <td>{{ doc.total_consumption }}</td>\n                            </tr>\n                        </table>\n                    </div>\n                \n                <div class=\"raw-mat-details\">\n                    \n                    <table style=\"width: 100%; font-size: 10px; font-weight: 400; color: black;\" border=\"2\">\n                        <thead class=\"raw-mat-details-head\" style=\"text-transform: uppercase; color: black; text-wrap-style: balance ;\">\n                            <tr>\n                                <th>RAw Materias</th>\n                                <th>Name</th>\n                                <th>QTY</th>\n                                <th>UOM</th>\n                                <th>Rate</th>\n                                <th>Total</th>\n                            </tr>\n                        </thead>\n                    \n                        <tbody>\n                            {% for raw in doc.raw_items %}\n                            <tr>\n                                <td>{{ raw.custom_group_type }}</td>\n                                <td>{{ raw.item_name }}</td>\n                                <td>{{ raw.qty }}</td>\n                                <td>{{ raw.uom }} </td>\n                                <td>{{ raw.amount }} </td>\n                                <td>{{ raw.amount }} </td>\n                            </tr>\n                            {% endfor %}\n                        </tbody>\n                    </table>\n                    \n                    \n                </div>\n                \n                    \n                    <!-- Right table - Costs -->\n                    <div class=\"right-table-container\">\n                        <table class=\"cost-table\">\n                             <tr>\n                                <td colspan=\"3\" class=\"cost-label\">MATERIALS COST</td>\n                                <td class=\"cost-amount\">{{ doc.get_formatted(\"material_cost\") }}</td>\n                            </tr>\n                        </table>\n                            <!--add table-->\n                        <div class=\"raw-mat-details\">\n                    \n                            <table style=\"width: 100%; font-size: 10px; font-weight: 400; color: black;\" border=\"2\">\n                                <thead class=\"raw-mat-details-head\" style=\"text-transform: uppercase; color: black; text-wrap-style: balance;\">\n                                    <tr>\n                                        <th>Operation</th>\n                                        <th>Vendor</th>\n                                        <th>Time</th>\n                                        <th>Price/Unit</th>\n                                        <th>Amount</th>\n                                    </tr>\n                                </thead>\n                            \n                                <tbody>\n                                    {% for value in doc.services %}\n                                    <tr>\n                                        <td>{{ value.service }}</td>\n                                        <td>{{ value.vendor or \"N/A\"}}</td>\n                                        <td>{{ value.time }}</td>\n                                        <td>{{ value.rate }} / {{value.uom}} </td>\n                                        <td>{{ value.amount }} </td>\n                                    </tr>\n                                    {% endfor %}\n                                </tbody>\n                            </table>\n                        </div>\n                            \n                        <table class=\"cost-table\">\n                            <tr>\n                                <td class=\"cost-lable\">TAILOR COST</td>\n                                <td class=\"cost-amount\">{{ doc.get_formatted(\"tailor_cost\") }}</td>\n                                <td class=\"cost-lable\">Time</td>\n                                <td class=\"cost-amount\">{{ doc.get_formatted(\"timetailor\") }}</td>\n                            </tr>\n                            {% if doc.is_embroidery %}\n                            <tr>\n                                <td class=\"cost-label\">EMBROIDERY COST(Each)</td>\n                                <td class=\"cost-amount\">{{ doc.get_formatted(\"embroidery_cost__each\") }}</td>\n                            </tr>\n                            {% endif %}\n                        </table>\n                        <div class=\"last-row\">\n                            <div class=\"qty-row\">\n                                <div class=\"qty-label\">QTY</div>\n                                <div class=\"qty-label-value\">{{ doc.get_formatted(\"quantity\") }}</div>\n                            </div>\n                            <div class=total-row>\n                                <div class=\"total-label\">TOTAL COST</div>\n                                <div class=\"total-cost\">{{ doc.get_formatted(\"total_cost\") }}</div>\n                            </div>\n                        </div>\n                    </div>\n                </div>\n            </div>\n        \n        <!-- Images in a single row at the top -->\n        </div>\n    </div>\n</body>\n</html>\n",
