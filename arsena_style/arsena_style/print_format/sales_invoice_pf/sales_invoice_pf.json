 "html": "<!DOCTYPE html>\r\n<html>\r\n<head>\r\n    <meta charset=\"utf-8\">\r\n    <title>{{ doc.name }}</title>\r\n    <style>\r\n        @media screen {\r\n            body {\r\n                font-family: Arial, sans-serif;\r\n                font-size: 12px;\r\n                margin: 0;\r\n                padding: 20px;\r\n            }\r\n        }\r\n        \r\n        @media print {\r\n            body {\r\n                font-family: Arial, sans-serif;\r\n                font-size: 12px;\r\n                margin: 0;\r\n                padding: 0;\r\n            }\r\n        }\r\n        \r\n        .print-format {\r\n            max-width: 8.3in;\r\n            margin: 0 auto;\r\n            padding: 0.25in;\r\n            border: 1px solid #d1d8dd;\r\n        }\r\n        \r\n        .print-heading {\r\n            text-align: center;\r\n            margin-bottom: 20px;\r\n        }\r\n        \r\n        .company-name {\r\n            font-size: 20px;\r\n            font-weight: bold;\r\n            color: #1a3b69;\r\n            margin-bottom: 5px;\r\n        }\r\n        \r\n        .invoice-title {\r\n            font-size: 16px;\r\n            font-weight: bold;\r\n            margin-bottom: 10px;\r\n        }\r\n        \r\n        .header-section {\r\n            display: flex;\r\n            justify-content: space-between;\r\n            margin-bottom: 20px;\r\n        }\r\n        \r\n        .header-left, .header-right {\r\n            width: 48%;\r\n        }\r\n        \r\n        .header-box {\r\n            border: 1px solid #d1d8dd;\r\n            padding: 10px;\r\n            margin-bottom: 10px;\r\n        }\r\n        \r\n        .header-no-border {\r\n            padding: 10px;\r\n            margin-bottom: 10px;\r\n        }\r\n        \r\n        .header-box-title {\r\n            font-weight: bold;\r\n            margin-bottom: 5px;\r\n            color: #1a3b69;\r\n        }\r\n        \r\n        table {\r\n            width: 100%;\r\n            border-collapse: collapse;\r\n            margin-bottom: 20px;\r\n        }\r\n        \r\n        th {\r\n            background-color: #f5f7fa;\r\n            border: 1px solid #d1d8dd;\r\n            padding: 8px;\r\n            font-weight: bold;\r\n            text-align: left;\r\n        }\r\n        \r\n        td {\r\n            border: 1px solid #d1d8dd;\r\n            padding: 8px;\r\n            vertical-align: top;\r\n        }\r\n        \r\n        .text-right {\r\n            text-align: right;\r\n        }\r\n        \r\n        .text-center {\r\n            text-align: center;\r\n        }\r\n        \r\n        .summary-section {\r\n            display: flex;\r\n            justify-content: space-between;\r\n        }\r\n        \r\n        .summary-left {\r\n            width: 60%;\r\n        }\r\n        \r\n        .summary-right {\r\n            width: 38%;\r\n        }\r\n        \r\n        .amount-in-words {\r\n            font-style: italic;\r\n            margin-bottom: 10px;\r\n        }\r\n        \r\n        .signature-section {\r\n            display: flex;\r\n            justify-content: space-between;\r\n            margin-top: 40px;\r\n        }\r\n        \r\n        .signature-box {\r\n            width: 48%;\r\n        }\r\n        \r\n        .terms-conditions {\r\n            margin-top: 20px;\r\n            border-top: 1px solid #d1d8dd;\r\n            padding-top: 10px;\r\n        }\r\n        \r\n        .footer {\r\n            margin-top: 20px;\r\n            text-align: center;\r\n            font-size: 10px;\r\n            color: #6c7680;\r\n        }\r\n    </style>\r\n</head>\r\n<body>\r\n    <div class=\"print-format\">\r\n        <!-- Header -->\r\n        <div class=\"print-heading\">\r\n            <div class=\"company-name\">ARSENAS COUTURE PRIVATE LIMITED</div>\r\n            <div class=\"invoice-title\">SALES INVOICE</div>\r\n        </div>\r\n        \r\n        <!-- Header Information -->\r\n        <div class=\"header-section\">\r\n            <div class=\"header-left\">\r\n                <div class=\"header-no-border\">\r\n                    <div class=\"header-box-title\">Bill To:</div>\r\n                    <div>{{ doc.customer_name }}</div>\r\n                    <div>{{ doc.address_display or '' }}</div>\r\n                </div>\r\n                <div class=\"header-no-border\">\r\n                    <div class=\"header-box-title\">Payment Terms:</div>\r\n                    <div>Due Date: {{ frappe.utils.formatdate(doc.due_date) }}</div>\r\n                </div>\r\n            </div>\r\n            <div class=\"header-right\">\r\n                <div class=\"header-no-border\">\r\n                    <div class=\"header-box-title\">Invoice Details:</div>\r\n                    <div>Invoice No: {{ doc.name }}</div>\r\n                    <div>Date: {{ frappe.utils.formatdate(doc.posting_date) }}</div>\r\n                </div>\r\n                <div class=\"header-no-border\">\r\n                    <div class=\"header-box-title\">Company Details:</div>\r\n                    <div>ARSENAS COUTURE PRIVATE LIMITED</div>\r\n                </div>\r\n            </div>\r\n        </div>\r\n        \r\n        <!-- Items Table -->\r\n        <table>\r\n            <thead>\r\n                <tr>\r\n                    <th>No.</th>\r\n                    <th>Item Code</th>\r\n                    <th>Description</th>\r\n                    <th>Qty</th>\r\n                    <th>UOM</th>\r\n                    <th class=\"text-right\">Rate</th>\r\n                    <th class=\"text-right\">Amount</th>\r\n                </tr>\r\n            </thead>\r\n            <tbody>\r\n                {% for item in doc.items %}\r\n                <tr>\r\n                    <td>{{ loop.index }}</td>\r\n                    <td>{{ item.item_code }}</td>\r\n                    <td>{{ item.description or item.item_name }}</td>\r\n                    <td>{{ item.qty }}</td>\r\n                    <td>{{ item.uom }}</td>\r\n                    <td class=\"text-right\">{{ frappe.utils.fmt_money(item.rate, currency=doc.currency) }}</td>\r\n                    <td class=\"text-right\">{{ frappe.utils.fmt_money(item.amount, currency=doc.currency) }}</td>\r\n                </tr>\r\n                {% endfor %}\r\n            </tbody>\r\n        </table>\r\n        \r\n        <!-- Summary Section -->\r\n        <div class=\"summary-section\">\r\n            <div class=\"summary-left\">\r\n                <div class=\"amount-in-words\">\r\n                    Amount in Words: {{ doc.in_words }}\r\n                </div>\r\n                \r\n                {% if doc.bank_name or doc.bank_account_no or doc.bank_details %}\r\n                <div class=\"header-box\">\r\n                    <div class=\"header-box-title\">Bank Details:</div>\r\n                    {% if doc.bank_name %}<div>Bank Name: {{ doc.bank_name }}</div>{% else %}<div>Bank Name: __________________</div>{% endif %}\r\n                    {% if doc.bank_account_no %}<div>Account No.: {{ doc.bank_account_no }}</div>{% else %}<div>Account No.: __________________</div>{% endif %}\r\n                    {% if doc.bank_ifsc %}<div>IFSC Code: {{ doc.bank_ifsc }}</div>{% else %}<div>IFSC Code: __________________</div>{% endif %}\r\n                    {% if doc.bank_details %}<div>{{ doc.bank_details }}</div>{% endif %}\r\n                </div>\r\n                {% endif %}\r\n            </div>\r\n            <div class=\"summary-right\">\r\n                <table>\r\n                    <tr>\r\n                        <td>Net Amount</td>\r\n                        <td class=\"text-right\">{{ frappe.utils.fmt_money(doc.net_total, currency=doc.currency) }}</td>\r\n                    </tr>\r\n                    \r\n                    {% for tax in doc.taxes %}\r\n                    <tr>\r\n                        <td>{{ tax.description }} ({{ tax.rate }}%)</td>\r\n                        <td class=\"text-right\">{{ frappe.utils.fmt_money(tax.tax_amount, currency=doc.currency) }}</td>\r\n                    </tr>\r\n                    {% endfor %}\r\n                    \r\n                    <tr>\r\n                        <td><strong>Grand Total</strong></td>\r\n                        <td class=\"text-right\"><strong>{{ frappe.utils.fmt_money(doc.grand_total, currency=doc.currency) }}</strong></td>\r\n                    </tr>\r\n                    \r\n                    <tr>\r\n                        <td>Rounded Total</td>\r\n                        <td class=\"text-right\">{{ frappe.utils.fmt_money(doc.rounded_total, currency=doc.currency) }}</td>\r\n                    </tr>\r\n                </table>\r\n            </div>\r\n        </div>\r\n        \r\n        <!-- Terms and Conditions -->\r\n        <div class=\"terms-conditions\">\r\n            <div class=\"header-box-title\">Terms and Conditions:</div>\r\n            <ol>\r\n                <li>Goods once sold will not be taken back or exchanged.</li>\r\n                <li>Interest @18% p.a. will be charged if payment is not made within due date.</li>\r\n                <li>Our responsibility ceases once the goods leave our premises.</li>\r\n                <li>Subject to local jurisdiction only.</li>\r\n            </ol>\r\n        </div>\r\n        \r\n        <!-- Signature Section -->\r\n        <div class=\"signature-section\">\r\n            <div class=\"signature-box\">\r\n                <div>For {{ doc.customer_name }}</div>\r\n                <div style=\"margin-top:40px;\">Authorized Signatory</div>\r\n            </div>\r\n            <div class=\"signature-box text-right\">\r\n                <div>For ARSENAS COUTURE PRIVATE LIMITED</div>\r\n                <div style=\"margin-top:40px;\">Authorized Signatory</div>\r\n            </div>\r\n        </div>\r\n        \r\n        <!-- Footer -->\r\n        <div class=\"footer\">\r\n            <p>This is a computer-generated invoice and does not require a signature.</p>\r\n        </div>\r\n    </div>\r\n</body>\r\n</html>",
